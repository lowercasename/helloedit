})
$('.bookmark').click(function(){
  if (bookmarkLocation == 'localStorage'){
    updateLocalStorage('bookmarkedDocuments')
  }
  else if (bookmarkLocation == 'database'){
    bookmarkDocument();
  }
})
</script>
